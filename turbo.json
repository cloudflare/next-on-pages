{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"outputs": ["dist/**"]
		},
		"build:watch": {
			"persistent": true,
			"cache": false,
			"outputs": ["dist/**"]
		},
		"lint": {},
		"prettier:check": {},
		"prettier:fix": {
			"cache": false
		},
		"types-check": {},
		"test:unit": {
			"persistent": true,
			"cache": false
		}
	}
}
