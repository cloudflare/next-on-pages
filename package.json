{
	"name": "@cloudflare/next-on-pages",
	"version": "1.0.0",
	"bin": "./bin/index.js",
	"exports": {
		"./utils": "./dist/utils/index.js"
	},
	"typesVersions": {
		"*": {
			"utils": [
				"./dist/utils/index.d.ts"
			]
		}
	},
	"scripts": {
		"prettier": "npx prettier --ignore-unknown --ignore-path=.gitignore .",
		"prettier:check": "npm run prettier -- --check",
		"prettier:fix": "npm run prettier -- --write",
		"lint": "eslint src",
		"types-check": "tsc --noEmit",
		"build.cli": "npx esbuild --bundle --platform=node ./src/cli/index.ts --external:esbuild --external:chokidar --outfile=./dist/index.js",
		"build.utils": "npx esbuild --bundle --platform=node --format=esm ./src/utils/index.ts --external:esbuild --external:chokidar --outfile=./dist/utils/index.js",
		"build.utils-types": "tsc  -p ./src/utils --emitDeclarationOnly --declaration --outDir ./dist/utils",
		"build": "run-p build.*",
		"build:watch.cli": "npm run build.cli -- --watch",
		"build:watch.utils": "npm run build.utils -- --watch",
		"build:watch.utils-types": " npm run build.utils-types -- --watch",
		"build:watch": "run-p build:watch.*",
		"prepare": "npm run build",
		"publish": "npm run build && npx changeset publish",
		"changeset": "npx changeset",
		"test:unit": "npx vitest --config vitest.config.ts"
	},
	"files": [
		"bin",
		"dist",
		"src/cli/templates"
	],
	"dependencies": {
		"@cloudflare/workers-types": "^4.20230404.0",
		"acorn": "^8.8.0",
		"ast-types": "^0.14.2",
		"chalk": "^5.2.0",
		"chokidar": "^3.5.3",
		"cookie": "^0.5.0",
		"esbuild": "^0.15.3",
		"js-yaml": "^4.1.0",
		"pcre-to-regexp": "^1.1.0",
		"zod": "^3.21.4",
		"zodcli": "^0.0.4"
	},
	"peerDependencies": {
		"next-on-pages-vercel-cli": "29.3.0-next-on-pages-fix-3",
		"wrangler": "^3.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@tsconfig/strictest": "^2.0.0",
		"@types/cookie": "^0.5.1",
		"@types/js-yaml": "^4.0.5",
		"@types/mock-fs": "^4.13.1",
		"@types/node": "^20.1.4",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"dedent-tabs": "^0.10.3",
		"eslint": "^8.35.0",
		"mock-fs": "^5.2.0",
		"npm-run-all": "^4.1.5",
		"p-limit": "^4.0.0",
		"prettier": "^2.8.4",
		"typescript": "^5.0.4",
		"vitest": "^0.31.0",
		"vitest-environment-miniflare": "^2.13.0"
	}
}
