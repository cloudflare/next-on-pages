{
	"name": "next-on-pages-monorepo",
	"private": true,
	"workspaces": [
		"internal-packages/*",
		"packages/*",
		"pages-e2e",
		"pages-e2e/features/*"
	],
	"scripts": {
		"prettier": "npx prettier --ignore-path .gitignore --ignore-unknown .",
		"prettier:check": "npm run prettier -- --check",
		"prettier:fix": "npm run prettier -- --write",
		"lint": "FORCE_COLOR=1 turbo lint",
		"types-check": "FORCE_COLOR=1 turbo types-check",
		"build": "FORCE_COLOR=1 turbo build",
		"build:watch": "FORCE_COLOR=1 turbo build:watch",
		"test:unit": "FORCE_COLOR=1 turbo test:unit",
		"test:e2e": "echo \"Run './pages-e2e.sh' in your terminal directly\"",
		"publish": "turbo build & changeset publish",
		"changeset": "npx changeset"
	},
	"devDependencies": {
		"prettier": "^2.8.8",
		"turbo": "^1.10.3"
	},
	"prettier": {
		"printWidth": 80,
		"singleQuote": true,
		"arrowParens": "avoid",
		"semi": true
	},
	"engines": {
		"node": "16.13.2"
	},
	"volta": {
		"node": "16.13.2"
	}
}
