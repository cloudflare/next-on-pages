{
	"name": "next-on-pages-monorepo",
	"private": true,
	"workspaces": [
		"internal-packages/*",
		"packages/*",
		"pages-e2e/features/*"
	],
	"scripts": {
		"prettier": "npx prettier --ignore-path .prettierignore --ignore-path .gitignore .",
		"prettier:check": "npm run prettier -- --check",
		"prettier:fix": "npm run prettier -- --write",
		"lint": "FORCE_COLOR=1 turbo lint",
		"types-check": "FORCE_COLOR=1 turbo types-check",
		"build": "FORCE_COLOR=1 turbo build",
		"build:watch": "FORCE_COLOR=1 turbo build:watch",
		"test:unit": "FORCE_COLOR=1 turbo test:unit",
		"//test:e2e 1": "we start with npm i because this fixes an existing but in the pages-e2e-test-runner-cli",
		"//test:e2e 2": "which fails to detect test suites in the files after any run of the test-runner cli",
		"test:e2e": "npm i ; npx @cfpreview/pages-e2e-test-runner-cli --environment=local",
		"publish": "turbo build & changeset publish",
		"changeset": "npx changeset"
	},
	"devDependencies": {
		"@cfpreview/pages-e2e-test-runner-cli": "^0.0.22",
		"prettier": "^3.0.0",
		"turbo": "^1.10.3"
	}
}
